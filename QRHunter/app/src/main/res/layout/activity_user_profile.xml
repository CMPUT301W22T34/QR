<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/username"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="16dp"
        android:text="Example Username"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/user_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="221dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:text="user email"
        app:layout_constraintBottom_toTopOf="@+id/score_up"
        app:layout_constraintEnd_toStartOf="@+id/edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="82dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="115dp"
        android:text="Edit"
        app:layout_constraintBottom_toTopOf="@+id/total_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_email"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/score_up"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="9dp"
        android:text="Sort by Score ↑"
        app:layout_constraintBottom_toTopOf="@+id/score_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <Button
        android:id="@+id/score_down"
        android:layout_width="135dp"
        android:layout_height="39dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="14dp"
        android:text="Sort by Score ↓"
        app:layout_constraintBottom_toTopOf="@+id/total_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_up" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Total Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_down" />

    <TextView
        android:id="@+id/total_number"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="37dp"
        android:text="Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_score"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="380dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/back_to_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <Button
        android:id="@+id/back_to_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="5dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>